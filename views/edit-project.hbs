<html>

<head>
    <title>Edit Project</title>
    <link rel="stylesheet" href="/public/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-light mb-5">
        <div class="container-xl">
            <a class="navbar-brand" href="/">
                <img src="/public/assets/logo-dumbways.png" alt="logo" style="width:49px; height:33px;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link fw-bold" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link fw-bold" aria-current="page" href="/add-project">Add Project</a>
                    </li>
                </ul>
                <a class="btn text-dark py-1 rounded-3" href="/register">Register</a>
                <a class="btn text-dark py-1 rounded-3 mx-4" href="/Login">Login</a>
                <a class="btn btn-dark text-white py-1 rounded-3" href="/contact-me">Contact Me</a>
            </div>
        </div>
    </nav>

    <!-- UPDATE PROJECT CONTAINER -->
    <div class="container container-form">
        <p class="h2 fw-bold text-center">EDIT MY PROJECT</p>
        <form action="/update-project/{{id}}" method="post" class="mt-4 w-50 mx-auto">
            <!-- Project Name -->
            <div class="mb-3">
                <label for="inputProjectName" class="form-label fw-bold fs-5 mb-1">Project Name</label>
                <input type="text" class="form-control shadow rounded" id="inputProjectName" name="inputProjectName"
                    value="{{edit.name}}">
            </div>
            <!-- Date -->
            <div class="row justify-content-center">
                <div class="col mb-3">
                    <label for="inputStartDate" class="form-label fw-bold fs-5 mb-1">Start Date</label>
                    <input id="inputStartDate" class="form-control shadow rounded" type="date"
                        value="{{edit.start_date}}" name="startDate">
                </div>
                <div class="col mb-3">
                    <label for="inputEndDate" class="form-label fw-bold fs-5 mb-1">End Date</label>
                    <input id="inputEndDate" class="form-control shadow rounded" type="date" name="endDate"
                        value="{{edit.end_date}}">
                </div>
            </div>
            <!-- Description -->
            <div class="mb-3">
                <label for="inputDescription" class="form-label fw-bold fs-5 mb-1">Description</label>
                <textarea class="form-control shadow bg-body rounded" id="inputDescription" rows="5"
                    name="inputDescription">{{edit.description}}</textarea>
            </div>
            <!-- Technologies -->
            <div class="mb-3">
                <label class="form-label fw-bold fs-5 mb-1">Technologies</label>
                <div class="row mx-0">
                    <div class="row justify-content-center">
                        <div class="col form-check">
                            <input class="form-check-input shadow" type="checkbox" value="{{reactjs}}" id="reactjs"
                                name="reactjs" {{#if edit.reactjs}}checked{{/if}}>
                            <label class="form-check-label" for="reactjs">React Js</label>
                        </div>
                        <div class="col form-check">
                            <input class="form-check-input shadow" type="checkbox" value="{{nodejs}}" id="nodejs"
                                name="nodejs" {{#if edit.nodejs}}checked{{/if}}>
                            <label class="form-check-label" for="nodejs">Node Js</label>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col form-check">
                            <input class="form-check-input shadow" type="checkbox" value="{{javascript}}"
                                id="javascript" name="javascript" {{#if edit.javascript}}checked{{/if}}>
                            <label class="form-check-label" for="javascript">Javascript</label>
                        </div>
                        <div class="col form-check">
                            <input class="form-check-input shadow" type="checkbox" value="{{java}}" id="java"
                                name="java" {{#if edit.java}}checked{{/if}}>
                            <label class="form-check-label" for="java">Java</label>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Upload Image -->
            <div class="mb-3">
                <label for="inputImage" class="form-label fw-bold fs-5 mb-1">Upload Image</label>
                <input class="form-control shadow bg-body rounded" type="file" id="inputImage" name="inputImage"
                    value="{{edit.image}}">
            </div>
            <!-- Submit -->
            <div class="mt-5 d-flex justify-content-end">
                <button type="submit" class="btn text-white bg-dark rounded-pill px-4 py-1 fw-bold">submit</button>
            </div>
        </form>
    </div>

</body>

</html>